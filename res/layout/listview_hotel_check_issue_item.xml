<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:button="@drawable/gomarket_appcenter_download_manager_selector"
        android:padding="20dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/cb"
        android:gravity="center"
        android:text="test"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_name"
        android:background="@color/content_orange"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/iv_photo"
        android:layout_alignTop="@+id/iv_photo"
        android:layout_marginRight="5dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_photo"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:src="@drawable/edit" />

    <ImageView
        android:id="@+id/iv_content_red_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignRight="@+id/iv_edit"
        android:layout_alignTop="@+id/iv_edit"
        android:layout_marginRight="13dp"
        android:src="@drawable/red_circle"
        android:visibility="gone" />

